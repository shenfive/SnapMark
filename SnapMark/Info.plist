<plist version="1.0">
    <dict>
        
        <key>UTExportedTypeDeclarations</key>
        <array>
            <dict>
                <key>UTTypeIdentifier</key>
                <string>com.yourcompany.snapmark</string> <!-- 自訂 UTI 名稱 -->
                <key>UTTypeDescription</key>
                <string>SnapMark 封裝檔案</string>
                <key>UTTypeConformsTo</key>
                <array>
                    <string>com.apple.package</string> <!-- ✅ 這行讓它被視為封裝資料匣 -->
                </array>
                <key>UTTypeTagSpecification</key>
                <dict>
                    <key>public.filename-extension</key>
                    <array>
                        <string>sm</string> <!-- 你的副檔名 -->
                    </array>
                    <key>public.mime-type</key>
                    <string>application/x-snapmark</string>
                </dict>
            </dict>
        </array>

        
        <key>CFBundleDocumentTypes</key>
        <array>
            <dict>
                <key>CFBundleTypeName</key>
                <string>SnapMark 封裝檔案</string>
                <key>CFBundleTypeRole</key>
                <string>Editor</string>
                <key>LSItemContentTypes</key>
                <array>
                    <string>com.yourcompany.snapmark</string> <!-- 對應上面的 UTI -->
                </array>
                <key>LSHandlerRank</key>
                <string>Owner</string>
            </dict>
        </array>

    </dict>

</plist>
